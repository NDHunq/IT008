<UserControl x:Class="Instagram.Tinh_nang.Tim"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Instagram.Tinh_nang"
             mc:Ignorable="d" 
     d:DesignHeight="729" d:DesignWidth="818">
    <Grid Background="White">
        <!-- dòng trên -->

        <TextBlock Style="{DynamicResource txt_block}" Text="Ds username/link người cần tim" 
                   Margin="19,18,51,665" Foreground="Black" FontSize="35">
        </TextBlock>
        
        <!-- scroll viewer -->
        <ScrollViewer Margin="19,150,36,125" BorderBrush="Black" BorderThickness="2,2,2,2">
            <TextBox x:Name="Ds" Foreground="Black" Width="764" BorderBrush="Black" >

            </TextBox>
        </ScrollViewer>

        <!-- nút thêm -->
        <Button x:Name="add_but" Margin="655,60,36,604" RenderTransformOrigin="0.539,0.908" 
                Background="{x:Null}" Click="Button_Click" BorderThickness="2,2,2,2"  >
            <TextBlock x:Name="btn_txt" Text="import" Foreground="Black" Style="{DynamicResource ResourceKey=txt_block}" 
                       Height="33" RenderTransformOrigin="0.5,0.5" FontSize="30" Width="101" 
                       TextAlignment="Center" HorizontalAlignment="Center">

            </TextBlock>
        </Button>

        
        <!-- nút chấp nhận -->
        <Button x:Name="accept_but" Margin="352,662,352,10" RenderTransformOrigin="0.539,0.908"
                Background="#FF1DCA59" Click="btn_Copy1_Click" BorderThickness="0,0,0,0"  >
            <TextBlock x:Name="new_usr" Text="run" Foreground="White" Style="{DynamicResource ResourceKey=txt_block}" 
                       Height="33" RenderTransformOrigin="0.5,0.5" FontSize="30" Width="101" TextAlignment="Center" HorizontalAlignment="Center"/>
        </Button>
        
        
        <!-- box thêm người dùng-->

        <TextBox x:Name="username_tb" Style="{DynamicResource ResourceKey=txt_box}" Margin="19,60,194,604" BorderBrush="Black"></TextBox>
    </Grid>
</UserControl>
